<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/gradient_yellow"
    android:padding="16dp"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="bold"
        android:id="@+id/credito_title"
        android:textColor="@color/hbGrey"
        android:textSize="22sp"
        android:text="Tenés un préstamo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="bold"
        android:id="@+id/credito_subtitle"
        android:textColor="@color/hbGrey"
        android:textSize="22sp"
        android:text="PRE APROBADO"
        android:layout_marginBottom="3sp"
        android:height="60dp"/>


    <TextView
        android:background="@drawable/rectangulo_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:tag="bold"
        android:id="@+id/credito_btn_text"
        android:textColor="@color/hbGrey"
        android:textSize="16sp"
        android:text="ACREDITAR EN CUENTA"
        />

</LinearLayout>