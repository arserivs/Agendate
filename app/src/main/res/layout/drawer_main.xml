<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawermain_drawerLayout"
    >

    <FrameLayout
        android:id="@+id/drawermain_mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginLeft="-64dp"
        >

        <ListView
            android:id="@+id/drawermain_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:fadeScrollbars="false"
            android:dividerHeight="1dp"
            android:divider="#33FFFFFF"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >

            <ImageButton
                android:id="@+id/drawermain_buttonLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/menu_icon_logout"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/drawermenuitem_textLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="SALIR" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>