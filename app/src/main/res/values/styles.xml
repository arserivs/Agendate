<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@null</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="logo">@drawable/icon_v_colored</item>
        <item name="displayOptions">useLogo|showHome|showTitle|homeAsUp</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#323232</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#323232</item>
    </style>

    <!-- Notifications ActionBar Activity -->

    <style name="ActivityNotifications" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/NotificationsBar</item>
    </style>

    <style name="NotificationsBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@null</item>
        <item name="titleTextStyle">@style/ActionBarTitleWhite</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="logo">@drawable/icon_v_white</item>
        <item name="displayOptions">useLogo|showHome|showTitle|homeAsUp</item>
    </style>


    <!-- White ActionBar Activity -->

    <style name="ActivityThemeWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ActionBarWhite</item>
    </style>

    <style name="ActionBarWhite" parent="Widget.AppCompat.ActionBar">
        <item name="background">@null</item>
        <item name="titleTextStyle">@style/ActionBarTitleWhite</item>
        <item name="logo">@drawable/icon_v_white</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <style name="ActionBarTitleWhite" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Black ActionBar Activity -->

    <style name="ActivityThemeBlack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ActionBarBlack</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarBlack" parent="Widget.AppCompat.ActionBar">
        <item name="background">@null</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="logo">@drawable/icon_v_black</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>

    </style>

    <!-- Default ActionBar -->

    <style name="ActivityThemeDefault" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBarDefault</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarDefault" parent="Widget.AppCompat.ActionBar">
        <item name="background">@null</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="logo">@drawable/icon_v_colored</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>

    </style>

</resources>
